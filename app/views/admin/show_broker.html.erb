<div class='adminusers-container'>
  <div class='adminusers-body'>
    <div class='header'>
      <i class='fa fa-square'></i> &nbsp;
        <h1>
            <%= @broker.broker_name.upcase %>'S PAGE
        </h1> <br>
    </div>
    <div class='tables'>
      <div class='brokers-table'>
        <table class="table mt-3">
            <thead class="thead-dark">
                <tr>
                <th>Broker ID</th>
                <th colspan='2'>Broker Name</th>
                <th>Broker Email</th>
                <th>Broker Created At</th>
                <th>Number of Stocks Added</th>
                <th>Action</th>
                </tr>
            </thead>
    <tbody class="text-white" style="font-size: 16px;">
        <tr>
        <td><%= @broker.id %></td>
        <td colspan='2'><%= @broker.broker_name %></td>
        <td><%= @broker.email %></td>
        <td><%= @broker.created_at.to_formatted_s(:long) %></td>
        <td><%= @broker.stocks.count %></td>
        <td><%= link_to "Edit Broker", edit_broker_path(@broker), class: "btn btn-dark" %></td>
        </tr>
    </tbody>
</table>

<%= link_to "Back to Users", admin_users_path%>